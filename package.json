{
  "name": "nodejs-microservices-bootstrap",
  "version": "1.0.0",
  "description": "Mono repo for microservices-bootstrap",
  "main": "index.js",
  "workspaces": [
    "packages/**",
    "services/**"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "turbo clean",
    "build": "turbo build",
    "watch": "tsc --build --watch",
    "test-all": "turbo run test-all --filter=[HEAD~]",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "lint-staged": "turbo run lint-staged",
    "prepare": "husky install"
  },
  "author": "daniel@pakos.email",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/uuid": "^8.3.4",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "eslint-config-generic": "*",
    "nodemon": "^3.0.1",
    "tsconfig": "*",
    "uuid": "^9.0.0"
  }
}
