{
  "name": "nodejs-microservices-bootstrap",
  "version": "1.0.0",
  "description": "Mono repo for microservices-bootstrap",
  "main": "index.js",
  "workspaces": [
    "apps/**",
    "services/**",
    "packages/**"
  ],
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "watch": "tsc --build --watch",
    "test-all": "turbo run test-all --filter=[HEAD~]",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "lint-staged": "turbo run lint-staged",
    "prepare": "husky install"
  },
  "author": "daniel@pakos.email",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "eslint-config-generic": "*",
    "nodemon": "^3.1.10",
    "tsconfig": "*",
    "uuid": "^11.1.0"
  },
  "packageManager": "^npm@11.4.2"
